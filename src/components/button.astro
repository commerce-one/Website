---
interface Props {
  color?: string;
  noPadding?: boolean;
  noShadow?: boolean;
  href?: string;
  borderRadius?: string;
}
const {
  color = "white",
  noPadding,
  noShadow,
  href,
  borderRadius = "10px",
} = Astro.props as Props;
---

<a
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[{ withPadding: !noPadding, withShadow: !noShadow }]}
>
  <slot />
</a>

<style define:vars={{ color, borderRadius }}>
  a {
    --shadow-height: 4px;
    flex-grow: 0;
    border: 4px solid var(--text);
    border-radius: var(--borderRadius);
    background: var(--color);
    color: var(--text);
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    transition: transform 100ms ease-in-out, box-shadow 100ms ease-in-out;
    text-decoration: none;
  }

  .withShadow {
    margin-bottom: var(--shadow-height);
    margin-right: var(--shadow-height);
    box-shadow: var(--shadow-height) var(--shadow-height) 0px var(--text);
  }

  .withPadding {
    padding: 0.5em 1em;
  }

  .withShadow:active {
    box-shadow: 0px 0px 0px var(--text);
    transform: translate(var(--shadow-height), var(--shadow-height));
  }
</style>
